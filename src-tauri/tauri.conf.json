{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Antigravity Agent",
  "version": "1.0.0",
  "identifier": "com.antigravity-agent.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/128x128@2x.png",
      "icons/256x256@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Antigravity account and profile manager",
    "longDescription": "Antigravity Agent helps you manage Antigravity accounts and backup user profiles with ease.",
    "targets": [
      "nsis"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/MonchiLin/antigravity-agent/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIxNzY0QUIyQTk0RjVGNjgKUldSV3pXQ1F6TkRMU3M0Zmw3YU9CdG93cHJrbUk4bE1iZURpaG9sbldYSmxNeVRCb2NQMU94TGYKY0lYQ2FJdGFhVVZs",
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Antigravity Agent",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "closable": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "shell:default",
            "dialog:default",
            "fs:default",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download",
            "updater:allow-install",
            "process:default",
            "process:allow-restart"
          ]
        }
      ]
    }
  }
}