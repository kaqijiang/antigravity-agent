{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "dist",
        "lib": [
            "es2020",
            "dom"
        ],
        "types": [
            "node"
        ],
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "src/webview/**/*",
      "vite.config.ts",
      "vite.extension.config.ts",
      "vite.webview.config.ts"
    ]
    // Exclude webview from tsc build, let Vite handle it. 
    // Wait, if I exclude it, types might be tricky if shared. 
    // But usually they are separate.
}